{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Web: All",
      "configurations": [
        "Web: Server (webserver)",
        "Web: Chrome (frontend)",
      ]
    },
    {
      "name": "Electron: All",
      "configurations": [
        "Electron: Main (backend)",
        "Electron: Renderer (frontend)"
      ]
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Web: Server (webserver)",
      "protocol": "inspector",
      "program": "${workspaceFolder}/node_modules/env-cmd/bin/env-cmd.js",
      "cwd": "${workspaceFolder}",
      "showAsyncStacks": true,
      "smartStep": true,
      "restart": true,
      "args": [
        "./lib/webresources/config.json",
        "node",
        "${workspaceFolder}/node_modules/npm-run-all/bin/run-p/index.js",
         "start:webserver",
         "start:backend"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Web: Server (backend)",
      "protocol": "inspector",
      "program": "${workspaceFolder}/lib/backend/main.js",
      "cwd": "${workspaceFolder}",
      "showAsyncStacks": true,
      "smartStep": true,
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Web: Server (backend) for tests",
      "protocol": "inspector",
      "program": "${workspaceFolder}/lib/backend/main.js",
      "cwd": "${workspaceFolder}",
      "env": {
        "imjs_test_project": "Retail Building Sample",
        "imjs_test_imodel": "Retail Building Sample",
      },
      "showAsyncStacks": true,
      "smartStep": true,
      "restart": true
    },
    {
      "name": "Web: Chrome (frontend)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "smartStep": true,
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Electron: Main (backend)",
      "protocol": "inspector",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "env": {
        "BROWSER": "none"
      },
      "args": [
        "lib/backend/main.js"
      ],
    },
    {
      "name": "E2E Tests only",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}/test/end-to-end",
      "args": [
        "--opts",
        "${workspaceFolder}/test/end-to-end/mocha.opts",
        "${workspaceFolder}/test/end-to-end/**/*.test.ts*"
      ]
    },
    {
      "name": "Unit Tests only",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}",
      "args": [
        "--opts",
        "${workspaceFolder}/test/unit/mocha.opts",
        "${workspaceFolder}/test/unit/**/*.test.ts*"
      ]
    },
    {
      "name": "Electron test",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceFolder}",
      "args": [
        "--opts",
        "${workspaceFolder}/test/electron/mocha.opts",
        "${workspaceFolder}/test/electron/**/*.test.ts*"
      ],
      "env": {
        "NODE_ENV": "test",
      }
    }
  ]
}
